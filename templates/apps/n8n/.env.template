############################################
# n8n Environment Variables
############################################

############################
# PostgreSQL Database
############################

POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=CHANGE_ME_POSTGRES_PASSWORD


############################
# n8n Configuration
############################

# Host and webhook URL (change if exposing publicly)
N8N_HOST=n8n.dev.internal
WEBHOOK_URL=https://n8n.dev.internal/

# CRITICAL: Encryption key for stored credentials
# Generate with: openssl rand -hex 32
# WARNING: If you lose this key, you cannot decrypt stored credentials!
# Back this up securely!
N8N_ENCRYPTION_KEY=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32


############################
# Optional: Basic Auth
############################

# Extra layer of security (in addition to n8n's own auth)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=


############################
# Timezone
############################

TIMEZONE=America/New_York


############################
# Future: Public Webhooks
############################

# If you need public webhooks later, update:
# - WEBHOOK_URL to your public URL
# - Add Caddy public route
# - Consider separate webhook-only hostname

# Web Dockerfile
FROM node:20-alpine AS base

# Install pnpm v10 to match local version
RUN npm install -g pnpm@10

WORKDIR /app

# Install dependencies and build
FROM base AS builder

# Copy workspace config files
COPY pnpm-workspace.yaml pnpm-lock.yaml tsconfig.base.json package.json ./

# Copy shared packages
COPY packages/intent-core ./packages/intent-core

# Copy the Studio app
COPY apps/studio ./apps/studio

# Install all workspace dependencies
RUN pnpm install --frozen-lockfile

# Build intent-core first (Studio depends on it)
RUN pnpm --filter @architectworks/intent-core build

# Build-time environment variables for Next.js (NEXT_PUBLIC_* are baked into the bundle)
ARG NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_API_URL=${NEXT_PUBLIC_API_URL}
ENV NEXT_TELEMETRY_DISABLED=1

RUN pnpm --filter @architectworks/studio build

# Production
FROM base AS runner
WORKDIR /app

ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 nextjs

# Copy standalone build
COPY --from=builder /app/apps/studio/.next/standalone ./
COPY --from=builder /app/apps/studio/.next/static ./apps/studio/.next/static
COPY --from=builder /app/apps/studio/public ./apps/studio/public

USER nextjs

EXPOSE 3000

ENV PORT=3000
ENV HOSTNAME="0.0.0.0"

WORKDIR /app/apps/studio
CMD ["node", "server.js"]

############################################
# Core Infra Environment Variables
# Hetzner VPS
############################################

############################
# Caddy
############################

# Email used for Let's Encrypt ACME registration
# (Only applies to PUBLIC domains like DuckDNS or real domains)
CADDY_ACME_EMAIL=you@example.com


############################
# Grafana
############################

# Initial Grafana admin credentials
# Change immediately after first login if desired
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_TO_A_LONG_RANDOM_PASSWORD

# Optional: set explicitly if serving behind a hostname
# Must match the Caddy route
GRAFANA_ROOT_URL=https://grafana.dev.internal


############################
# Loki
############################

# Log retention is configured in loki/config.yaml
# This env section exists mostly for future overrides
LOKI_RETENTION_DAYS=14


############################
# Prometheus
############################

# Metrics retention is configured via command args
PROMETHEUS_RETENTION=30d


############################
# Tailscale
############################

# Auth key generated in Tailscale admin console
# Recommended:
# - reusable
# - ephemeral
# - tagged (e.g. tag:servers)
TS_AUTHKEY=tskey-auth-REPLACE_ME

# Hostname as it appears in the Tailscale admin UI
TS_HOSTNAME=hetzner-vps


############################
# Observability Labels (Optional but Recommended)
############################

# Used by Alloy / logging to apply consistent labels
OBSERVABILITY_HOST=hetzner-vps
OBSERVABILITY_ENV=infra


############################
# Future / Reserved
############################

